pipeline {
    agent any

    tools {
        jdk 'JDK17'
        maven 'Maven3'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mangi-yeswanth/Java-Selenium-Projects.git',
                    credentialsId: 'github-creds'
            }
        }

        stage('Build & Run Tests') {
            steps {
                bat 'cd Capstone-Project && mvn clean test'
            }
        }

        stage('Publish Reports') {
            steps {
                junit 'Capstone-Project/target/surefire-reports/*.xml'

                publishTestNGResults testNGpattern: 'Capstone-Project/test-output/testng-results.xml'

                cucumber buildStatus: 'UNSTABLE',
                         fileIncludePattern: 'Capstone-Project/target/cucumber-reports/*.json',
                         sortingMethod: 'ALPHABETICAL'

                publishHTML(target: [
                    reportDir: 'Capstone-Project/test-output/ExtentReports',
                    reportFiles: 'index.html',
                    reportName: 'Extent Report'
                ])
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'Capstone-Project/target/**/*.html', fingerprint: true
        }
    }
}
